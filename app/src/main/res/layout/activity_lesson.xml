<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lesson_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_white"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- fixed-height top row so icons always vertically aligned -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Location chip: use an ImageView + TextView so icon is scaled to a small size -->
            <LinearLayout
                android:id="@+id/location_chip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/ivLocationSmall"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/location"
                    android:tint="@color/white" />

                <TextView
                    android:id="@+id/tvLocationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kuningan, Jawa Barat"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="-40dp">

            <!-- Back chevron (left) -->
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="8dp"
                android:src="@drawable/arrow_back"
                android:tint="@color/primary_color" />
            <!-- Title centered horizontally by using weight and center gravity -->
            <TextView
                android:id="@+id/tvSortOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Materi 1"
                android:textColor="@color/primary_color"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="36dp"
                android:layout_height="36dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/ppp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Deskripsi Singkat"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lessonInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_card_gradient"
        android:elevation="4dp"
        android:clipToPadding="false"
        android:clipToOutline="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvLessonTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mengenal Huruf Alif (ا) - Kho (خ)"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvLessonDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Belajar membaca, menghafal, dan mengucapkan huruf hijaiyah"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- icon + count row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivPartsIcon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/open_book"
                    android:tint="@color/white" />

                <TextView
                    android:id="@+id/tvLessonPartsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="8 Pembelajaran"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- progress label row: "Progress" left, percent right -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvProgressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvProgressPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20% Selesai"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- progress bar full width under the label row -->
            <ProgressBar
                android:id="@+id/progressLoading"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:progress="20"
                android:max="100"
                android:indeterminate="false"
                android:progressTint="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rvParts"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_marginTop="-12dp" />
</LinearLayout>