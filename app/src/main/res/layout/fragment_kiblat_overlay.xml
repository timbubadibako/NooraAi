<?xml version="1.0" encoding="utf-8"?>
<!-- Bottom sheet content: CardView ensures dial/needle clipped to rounded corners -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/kiblat_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingTop="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@android:color/transparent">

    <!-- small handle -->
    <View
        android:layout_width="48dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:background="@color/divider"
        android:layout_marginBottom="12dp" />

    <!-- CardView wrapper: ensures dial & needle clipped to rounded corners too -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_compass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="false"
        app:cardBackgroundColor="@color/card_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:gravity="center_horizontal">

            <!-- Compass dial container (square). Give an id so we can position marker relative to it -->
            <FrameLayout
                android:id="@+id/dial_container"
                android:layout_width="420dp"
                android:layout_height="420dp"
                android:layout_marginBottom="-40dp"
                android:layout_marginTop="-20dp">

                <!-- Dial (background) -->
                <ImageView
                    android:id="@+id/ivDial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_compass"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:contentDescription="compass_dial"
                    android:layout_gravity="center_horizontal"/>

                <!-- Needle (on top). Use centerInside so the needle keeps its aspect and pivots at center -->
                <ImageView
                    android:id="@+id/ivNeedle"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_compass_needle"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:contentDescription="compass_needle"
                    android:layout_gravity="center_horizontal"
                    />
            </FrameLayout>

            <TextView
                android:id="@+id/tvDegrees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0Â°"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/tvCompassTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luruskan Niat, Luruskan Arah"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/tvCompassSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temukan arah kiblat dengan tepat."
                android:textSize="13sp"
                android:textColor="@color/muted_text"
                android:gravity="center"
                android:layout_marginTop="6dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>