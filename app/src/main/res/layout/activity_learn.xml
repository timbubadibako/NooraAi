<!--                        android:background="@drawable/tab_rectangle_inactive"-->
<!--                        android:text="IQRA 3"-->
<!--                        android:textAllCaps="false"-->
<!--                        android:textColor="@color/text_primary"-->
<!--                        android:gravity="center" />-->
<!--                </LinearLayout>-->

                <HorizontalScrollView
                    android:id="@+id/lessonsTabScroll"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:fillViewport="false"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:layout_marginTop="-8dp">

                    <!-- Inner linear layout where buttons will be added dynamically.
                         Keep the id lessons_tab_row_container so existing code references still match. -->
                    <LinearLayout
                        android:id="@+id/lessons_tab_row_container"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp" />
                </HorizontalScrollView>

                <!-- short description -->
                <TextView
                    android:id="@+id/tvLessonIntro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Bangun dasar yang kuat dengan mengenal dan berlatih membaca huruf hijaiyah sebagai langkah awal"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- progress + exam row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:weightSum="2">

                    <!-- progress card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardProgress"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="80dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_check_card">

                            <ImageView
                                android:id="@+id/tvProgressIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="10dp"
                                android:background="@drawable/bg_circle_primary"
                                android:src="@drawable/open_book"
                                android:tint="@color/white"
                                android:gravity="center" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingStart="12dp">

                                <TextView
                                    android:id="@+id/tvProgressTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 dari 5 Materi"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- exam card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardExam"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="80dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:background="@drawable/bg_check_card">

                            <ImageView
                                android:id="@+id/tvExamIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_circle_primary"
                                android:padding="9dp"
                                android:src="@drawable/exam"
                                android:tint="@android:color/white"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/tvExamLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:text="Ujian Lesson"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- list of materials for current lesson -->
                <TextView
                    android:id="@+id/tvMaterialsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Daftar Materi"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMaterials"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>