<?xml version="1.0" encoding="utf-8"?>
<!-- Bottom sheet content: card (your existing card) with prayer schedule content placed inside prayerContainer -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/kiblat_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingTop="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@android:color/transparent">

    <View
        android:layout_width="48dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:background="@color/divider"
        android:layout_marginBottom="12dp" />

    <!-- CardView wrapper: ensures dial & needle clipped to rounded corners too -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_compass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="false"
        app:cardBackgroundColor="@color/card_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:gravity="center_horizontal">

            <!-- Container you provided; we keep it and put schedule content inside -->
            <FrameLayout
                android:id="@+id/prayerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:padding="12dp">

                <!-- CONTENT: title, location, divider, list, progress (only schedule-related views) -->
                <LinearLayout
                    android:id="@+id/prayer_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/tvPrayerTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jadwal Sholat Hari Ini"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvPrayerLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lokasi tidak tersedia"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="start"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginBottom="8dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerPrayerTimes"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="true" />

                    <ProgressBar
                        android:id="@+id/progressPrayer"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>