<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme using MaterialComponents -->
    <style name="Theme.Nooraai" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="android:statusBarColor">@color/primary_variant</item>

        <!-- Background / surfaces -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/card_white</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Text appearances (optional override) -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.Noora.Headline6</item>
    </style>

    <style name="TextAppearance.Noora.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
    </style>
</resources>